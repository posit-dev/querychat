    duckdb,
    ellmer,
    glue,
    htmltools,
    purrr,
    rlang,
    shiny,
    shinychat,
    whisker,
    xtable
Encoding: UTF-8
Roxygen: list(markdown = TRUE)
RoxygenNote: 7.3.2
